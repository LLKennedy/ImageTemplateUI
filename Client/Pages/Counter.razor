@page "/counter"
@page "/counter/{Initial:int}"

@* Fall back with a string in case int parsing fails *@
@page "/counter/{StringInitial}"

@using ImageTemplateUI.Components

<h1>Counter</h1>

<p>Current count: @Model.Count</p>

<button class="btn btn-primary" @onclick="Model.IncrementCount">Click me</button>

@code {
    [Parameter]
    public int Initial { get; set; } = 0;
    [Parameter]
    public string StringInitial { get; set; } = null;
    private CounterModel Model;
    protected override void OnInitialized()
    {
        Model = new CounterModel(Initial);
    }
}
